<html>
<head>
  <%- include ../partials/head %>
  <%- include ../partials/scripts %>

</head>
<body>
    <%- include ../partials/nav %>
  <main>
    <button>Stand Up!</button>
      <div>
        <p>Latest issues: </p>
        <%if (latestIssue.length > 0) { %>
          <% latestIssue.forEach(issue => { %>
            <p><a href='<%=issue.html_url %>'><%=issue.html_url %></a></p>
            <%}) %>
          <% } else { %>
          <p>No issues!</p>
          <% } %>
        
      </div>
      <div>
        <p>Latest commits: </p>
        <% latestCommit.forEach(commit => { %>
          <p><a href='<%=commit.html_url %>'><%=commit.html_url %></a></p>
        <%}) %>
      </div>
      <div>
        <p>Project checklist:</p>
      </div>
      <div>
        <p>Upcoming meetings:</p>
      </div>
      <button>PDF CREATOR!</button>
      <script>
        $(function () {
           let parse =  <%- JSON.stringify(eventList) %>;
           $('#calendar').fullCalendar({ 
             defaultView: 'basicWeek',
            header: { 
              left: 'title', 
              center: '', 
              right: 'basicWeek,month prev,next'
            },
            events: parse
          })
        })
        </script>
      <div id='calendar'></div>
      <div id='add-sum-stuff'>
        <form action="/dashboard/<%= id %>" method='POST'>
          <input name='project_id' type=hidden value="<%=id%>">
          <input name='latestIssue' type=hidden value="<%- JSON.stringify(latestIssue)%>">
          <input name='latestCommit' type=hidden value="<%- JSON.stringify(latestCommit)%>">
          <input name='eventList' type=hidden value="<- JSON.stringify(eventList)%>"
          <label for="name">Name of Project</label>
          <input name='name' type='text'>
          <label for='start'>Start Date</label>
          <input name='start' type='date'>
          <label for='end'>End Date</label>
          <input name='end' type='date'>
          <label for='description'>Description</label>
          <input name='description' type='textarea'>
          <button>Submit that shit fool</button>
        </form>
      </div>
  </main>
  <footer>
    insert footer partial here
  </footer>
</body>

</html>
